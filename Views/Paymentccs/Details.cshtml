@model printSmart.Models.Paymentcc

@{
    ViewData["Title"] = "Details";
}

<div id="">
    <main>
        <div class="container-fluid px-4">
            <h2 class="mt-4">Detalle Pago</h2>
            <hr />
                       
            <!-- Detalles-->
            <div class="card mb-4">
                <div class="card-body">
                   
                     <dl class="row">
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.Date)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Date)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.Amount)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Amount)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                            
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.IdCostumerNavigation)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.IdCostumerNavigation.Name)
                            </dd>
                             <dt class = "col-sm-2">
                                Nit del Cliente
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.IdCostumerNavigation.Nit)
                            </dd>

                             <dt class = "col-sm-2">
                                Dirrecion:
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.IdCostumerNavigation.Address)
                            </dd>
                             <dt class = "col-sm-2">
                                Email
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.IdCostumerNavigation.Email)
                            </dd>
                        </dl>
                    
                    <div>
                        <a asp-action="Edit"  asp-route-id="@Model?.Id" class="btn btn-warning btn-sm text-capitalize">Editar</a>
                        <a asp-action="Index" class="btn btn-secondary btn-sm text-capitalize">Regresar</a>
                    </div>

                </div>
            </div>
        </div>
    </main>
    
</div>
