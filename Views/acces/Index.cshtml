@model users
@{
    Layout = null; 
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <link rel="stylesheet" href="~/css/sandstone.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/printSmart.styles.css" asp-append-version="true" />

</head>
<body>

    <div class="row mt-5">

        <div class="col-sm-4 offset-sm-4">

            <form asp-controller="acces" asp-action="Index" method="post">
              <fieldset>
                <legend> <h1> Login </h1></legend>

                <div class="form-group row">
                  <label for="staticEmail" class="col-sm-2 col-form-label">admin 1234</label>
                  <div class="col-sm-10">
                    <input type="text" readonly="" class="form-control-plaintext" id="staticEmail" value="usuario">
                  </div>
                </div>

                <div class="form-group">
                  <label for="exampleInputEmail1" class="form-label mt-4">User Name</label>
                  <input type="" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Username" asp-for="UserName">
                  <small id="emailHelp" class="form-text text-muted">u</small>
                </div>

                <div class="form-group">
                  <label for="exampleInputPassword1" class="form-label mt-4">Password</label>
                  <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" asp-for="Password">
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
              </fieldset>
            </form>

        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
