@model printSmart.Models.ServicioSuministro

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
<h1>Agregar Suministro a Servicio</h1>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
            <div class="form-group col-md-5">
                <label  class="control-label">Servicio</label>
                <select asp-for="IdServicio" class="form-control" asp-items="ViewBag.IdServicio"></select>
                <span asp-validation-for="IdServicio" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label  class="control-label">Suministro</label>
                <select asp-for="IdSuministro" class="form-control" asp-items="ViewBag.IdSuministro"></select>
                <span asp-validation-for="IdSuministro" class="text-danger"></span>
            </div>
            </div>
            <div class="form-row mt-5">
                <div class="form-group col-md-5">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
                <div class="form-group col-md-5">
                    <a class="btn btn-warning" asp-action="Index"><i class="fa fa-angle-left"></i> Regresar</a>
                </div>
             </div>
        </form>
    </div>
</div>
</div>

